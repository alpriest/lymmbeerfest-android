<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/lymm_beer_fest_home_bg"
        android:scaleType="centerCrop"
        android:alpha="0.25"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/history"
                android:theme="@style/WhiteText"
                android:textAlignment="textStart"
                android:paddingTop="24dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:text="@string/website"
                android:theme="@style/YellowButton"
                android:id="@+id/web_link"
                android:layout_marginBottom="20dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/email"
                android:theme="@style/YellowButton"
                android:layout_gravity="center_horizontal"
                android:id="@+id/email_link"
                android:layout_marginBottom="20dp"/>

            <ImageView
                android:id="@+id/roundtable_logo"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/rtbi_logo"
                android:layout_marginBottom="20dp"
                />

            <ImageView
                android:id="@+id/facebook_logo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/facebook"
                android:layout_marginBottom="20dp"
                />

            <ImageView
                android:id="@+id/drinkaware_logo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/drinkaware"
                android:layout_marginBottom="20dp"
                />

        </LinearLayout>

    </ScrollView>
</FrameLayout>


