<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/lymm_beer_fest_home_bg"
        android:scaleType="centerCrop"
        android:alpha="0.25"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Lymm Beer Festival was the brainchild of the Lymm and District Round Table member Chris Stephens. Started in 2010, the Lymm Beer Fest has quickly established itself as a firm favourite with local people and has become one of the three main annual charity events organised by Lymm and District Round Table in order to raise money for local charities and community groups. The other events are the Lymm Duck Race and the Big Lymm Bonfire.\n\nThe event will take place in the Lymm Village Hall and will offer over 35 carefully selected real ales, ciders and perries. We will also be serving a fantastic selection of gins at the Presidentâ€™s Gin Palace. There will be live music involving a host of talented local bands and singers, and a selection of hot and cold foods, with all profits going to charity. For those abstaining or driving we will also be offering free soft drinks."
                android:theme="@style/WhiteText"
                android:textAlignment="textStart"
                android:paddingTop="24dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:text="www.lymmbeerfest.co.uk"
                android:theme="@style/YellowButton"
                android:id="@+id/web_link"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="beerfestival@lymmroundtable.co.uk"
                android:theme="@style/YellowButton"
                android:layout_gravity="center_horizontal"
                android:id="@+id/email_link"
                android:layout_marginBottom="20dp"/>

            <ImageView
                android:id="@+id/roundtable_logo"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/rtbi_logo"
                android:layout_marginBottom="20dp"
                />

            <ImageView
                android:id="@+id/facebook_logo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/facebook_like"
                android:layout_marginBottom="20dp"
                />


        </LinearLayout>

    </ScrollView>
</FrameLayout>


